PREFIX doapk: <https://w3id.org/doap-kg#>
PREFIX xsd:   <http://www.w3.org/2001/XMLSchema#>

SELECT ?tx ?amount ?currency ?score ?policy
WHERE {
  ?tx a doapk:PaymentTransaction ;
      doapk:amount ?amount ;
      doapk:currency ?currency ;
      doapk:riskScore ?score .
  OPTIONAL { ?tx doapk:governedBy ?policy . }
  FILTER(xsd:decimal(?score) >= 0.8)
}
ORDER BY DESC(xsd:decimal(?score))
